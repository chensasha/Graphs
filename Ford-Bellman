#include <iostream>
#include <vector>
#include <cmath>

using namespace std;

const int inf=1000000;

void Ford_Bellman (int v, int e, int **arr, vector <int> p, int *cost) {
    for (int i=0; i<v-1; i++) {
	for (int j=0; j<e; j++) {
		if (p[arr[j][0]]<inf) {
			p[arr[j][1]]=min (p[arr[j][1]], p[arr[j][0]]+cost[j]);
		}
	}
    }
}

int main() {
    int e,v; 
    cin>>e>>v; //количество ребер и вершин
    int v1, v2;
    cin>>v1>>v2;
    int **arr=new int* [e];
    for (int i=0; i<e; i++) {
        arr[i]=new int [2];
    }
    for (int i=0; i<e; i++) {
        cin>>arr[i][0]>>arr[i][1];
    }
    int *cost=new int [e];
    for (int i=0; i<e; i++) {
        cin>>cost[i];
    }
    vector <int> p (v);
    for (int i=0; i<v; i++) {
        p[i]=inf;
    }
    Ford_Bellman (0, v, e, arr, p, cost);
    return 0;
}
